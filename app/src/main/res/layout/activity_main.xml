<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--шапка приложения -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@color/grey"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/light_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"/>

                <TextView
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="11dp"
                    android:layout_gravity="center"
                    android:textColor="@color/light_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Рейтинг"/>
            </LinearLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/light_grey"
                android:layout_width="2dp"
                android:layout_height="72dp"/>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/light_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"/>

                <TextView
                    android:textSize="11dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_gravity="center"
                    android:textColor="@color/light_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHighlight="@color/colorAccent"
                    android:text="Написано строк кода"/>
            </LinearLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/light_grey"
                android:layout_width="2dp"
                android:layout_height="72dp"/>

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/light_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"/>

                <TextView
                    android:textSize="11dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_gravity="center"
                    android:textColor="@color/light_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Проектов"/>
            </LinearLayout>


        </LinearLayout>

        <!--основные элементы списка-->

        <LinearLayout
            style="@style/UpperLinLayout">

            <ImageView
                style="@style/ImageLeft"
                android:src="@drawable/phone"/>

            <LinearLayout
                style="@style/InnrerLinlayout">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phone_et"
                        style="@style/EditTextStyle"
                        android:hint="Мобильный телефон"
                        android:inputType="phone"
                        android:text="89150748677"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/ImageRight"
                android:src="@drawable/phone2"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="72dp"
            android:background="@color/light_grey"/>

        <LinearLayout
            style="@style/UpperLinLayout">

            <ImageView
                style="@style/ImageLeft"
                android:src="@drawable/email1"/>

            <LinearLayout
                style="@style/InnrerLinlayout">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_et"
                        style="@style/EditTextStyle"
                        android:hint="Мобильный телефон"
                        android:inputType="phone"
                        android:text="89150748677"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/ImageRight"
                android:src="@drawable/email2"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="72dp"
            android:background="@color/light_grey"/>

        <LinearLayout
            style="@style/UpperLinLayout">

            <ImageView
                style="@style/ImageLeft"
                android:src="@drawable/social1"/>

            <LinearLayout
                style="@style/InnrerLinlayout">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/social_et"
                        style="@style/EditTextStyle"
                        android:hint="Профиль VK"

                        android:text="vk.com/id123456"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/ImageRight"
                android:src="@drawable/social2"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="72dp"
            android:background="@color/light_grey"/>

        <LinearLayout
            style="@style/UpperLinLayout">

            <ImageView
                style="@style/ImageLeft"
                android:src="@drawable/repo1"/>

            <LinearLayout
                style="@style/InnrerLinlayout">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/repo_et"
                        style="@style/EditTextStyle"
                        android:hint="Репозиторий"
                        android:text="https://github.com/justshurik/"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/ImageRight"
                android:src="@drawable/repo2"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="72dp"
            android:background="@color/light_grey"/>

        <LinearLayout
            style="@style/UpperLinLayout"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/ImageLeft"
                android:src="@drawable/about1"/>

            <LinearLayout
                style="@style/InnrerLinlayout">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/about_et"
                        style="@style/EditTextStyle"
                        android:layout_height="wrap_content"
                        android:hint="О себе"
                        android:text="ылвталытлывлоывтлывлытвлдоытвдслыылвталытлывлоывтлывлытвлдоытвдслыылвталытлывлоывтлывлытвлдоытвдслдвлстыд длвьдыльвдылвьалдывм ыдлвьа ддыльвдылвьаыдлвьадлытьвад ылвталытлывлоывтлывлытвлдоытвдслыылвталытлывлоывтлывлытвлдоытвдслыылвталытлывлоывтлывлытвлдоытвдслдвлстыд длвьдыльвдылвьалдывм ыдлвьа ддыльвдылвьаыдлвьадлытьвад"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/ImageRight"
                android:src="@drawable/about2"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="72dp"
            android:background="@color/light_grey"/>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

